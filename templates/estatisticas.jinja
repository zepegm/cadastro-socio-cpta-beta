<script>

dados = {{dados}};
labels_grap = []
data_grap = []

for (var i = 0; i < dados.length; i++) {
    labels_grap.push(dados[i]['month']);
    data_grap.push(dados[i]['count']);
}

const ctx = document.getElementById('myChart').getContext('2d');
const myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: labels_grap,
        datasets: [{
            label: 'nº de retiradas',
            data: data_grap,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        responsive: true, 
        maintainAspectRatio: false,
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});

function alterarAno() {
    var ano = $('#cb_ano').val();
    
    $.ajax({
        type: "POST",
        url: "{{ url_for('estatisticas') }}",
        contentType: "application/json",
        data: JSON.stringify(ano),
        dataType: "json",
        success: function(response) {
        // recebido a lista com sucesso, é necessário limpar a tabela e reinserir toda a lista
            console.log(myChart.data.labels);
            console.log(myChart.data.datasets[0].data);
            
            labels_grap = []
            data_grap = []

            for (var i = 0; i < response['dados'].length; i++) {
                labels_grap.push(response['dados'][i]['month']);
                data_grap.push(response['dados'][i]['count']);
            }            

            myChart.data.labels = labels_grap;
            myChart.data.datasets[0].data = data_grap;
            myChart.update();

        },
        error: function(err) {
            console.log(err);
        }
    });
}

</script>
